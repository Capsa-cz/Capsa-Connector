<UserControl x:Class="Capsa_Connector.View.ViewComponents.ViewWrap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Capsa_Connector.View.ViewComponents"
             mc:Ignorable="d" 
             x:Name="viewWrap"
             d:DesignHeight="500" d:DesignWidth="560">
    <Grid VerticalAlignment="Stretch" Margin="30,0,30,0">
        <TextBlock Style="{StaticResource viewTitle}" Grid.Row="0" Text="{Binding ElementName=viewWrap, Path=title}" Grid.Column="0"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" x:Name="PART_Host" />
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    </Grid>
</UserControl>
