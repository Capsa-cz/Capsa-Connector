<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="textHeading" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="30" />
        <Setter Property="Foreground" Value="{DynamicResource heading}" />
        <Setter Property="TextAlignment" Value="Left"/>
    </Style>

    <Style x:Key="textSecoundaryHeading" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource heading}"/>
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="textParagraph" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{DynamicResource paragraph}" />
    </Style>

    <Style x:Key="textSeparator" TargetType="{x:Type TextBlock}">
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource bold}"/>
    </Style>

    <Style x:Key="textDescription" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource primaryBackgroundColor3}"/>
    </Style>

    <Style x:Key="textLarge" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource largeText}"/>
        <Setter Property="FontSize" Value="30"/>
    </Style>

    <Style x:Key="textSmall" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource smallText}"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
</ResourceDictionary>